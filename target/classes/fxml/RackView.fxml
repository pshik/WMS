<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="710.0" maxWidth="1250.0" minHeight="710.0" minWidth="1250.0" prefHeight="710.0" prefWidth="1250.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ControllerRack">
   <center>
      <Pane fx:id="rackPane" maxHeight="710.0" maxWidth="980.0" minHeight="710.0" minWidth="980.0" prefHeight="710.0" prefWidth="980.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin></Pane>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="cmbRack" onAction="#changeRack" prefHeight="50.0" prefWidth="225.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </ComboBox>
            <Pane maxWidth="250.0" minWidth="250.0" prefHeight="200.0" prefWidth="250.0">
               <children>
                  <VBox>
                     <children>
                        <ComboBox fx:id="cmbReference" onAction="#showAvailableCells" prefHeight="45.0" prefWidth="225.0">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
                           </VBox.margin>
                        </ComboBox>
                     </children>
                  </VBox>
                  <Button fx:id="btnLoad" layoutX="14.0" layoutY="151.0" mnemonicParsing="false" onAction="#loadReference" text="Load">
                     <font>
                        <Font name="Tahoma" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnPickUp" layoutX="153.0" layoutY="151.0" mnemonicParsing="false" onAction="#pickUpReference" text="Pick Up">
                     <font>
                        <Font name="Tahoma" size="18.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Pane>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" vbarPolicy="ALWAYS">
               <content>
                  <TextArea fx:id="txtLog" prefHeight="200.0" prefWidth="225.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextArea>
               </content>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </ScrollPane>
            <TextArea fx:id="cellInfo" editable="false" maxHeight="150.0" maxWidth="225.0" minHeight="150.0" minWidth="225.0" prefHeight="150.0" prefWidth="225.0">
               <font>
                  <Font name="Tahoma" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextArea>
            <Label fx:id="currentUser" alignment="CENTER_RIGHT" contentDisplay="CENTER" textFill="#a9bf39">
               <VBox.margin>
                  <Insets bottom="10.0" left="50.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Tahoma" size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </right>
</BorderPane>
